{
  "name": "ai-vibe-workflow",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["*"]
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "db:push": "pnpm -C packages/db db:push",
    "db:studio": "pnpm -C packages/db db:studio",
    "ci": "pnpm lint && pnpm typecheck && pnpm build"
  },
  "engines": {
    "node": "22.x"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}

